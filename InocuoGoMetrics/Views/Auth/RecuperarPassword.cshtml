@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperar Contraseña - InocuoGo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #e9ecef;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
            padding: 20px;
        }

        .login-card {
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            padding: 2rem 2.5rem;
            width: 100%;
            max-width: 400px;
            border: 1px solid #dee2e6;
        }

        .brand-logo {
            width: 140px;
            height: auto;
            display: block;
            margin: 0 auto 1rem;
        }

        .fallback-block {
            display: none;
            margin-bottom: 1rem;
        }

        .fallback-icon {
            font-size: 5rem;
            color: #198754;
        }

        .login-title {
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #333;
            font-size: 1.6rem;
        }

        .custom-input-group {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
            transition: all 0.2s;
        }

            .custom-input-group:focus-within {
                border-color: #198754;
                background-color: #fff;
                box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.15);
            }

            .custom-input-group .input-group-text {
                background-color: transparent;
                border: none;
                color: #6c757d;
                padding: 0 1rem 0 1rem;
            }

            .custom-input-group .form-control {
                border: none;
                box-shadow: none;
                background-color: transparent;
                padding: 0.7rem;
                color: #333;
            }

        .btn-ingresar {
            background-color: #198754;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            padding: 0.8rem;
            transition: all 0.2s;
        }

            .btn-ingresar:hover {
                background-color: #157347;
                transform: translateY(-1px);
            }

        @@media (max-width: 576px) {
            .login-card {
                padding: 1.5rem;
            }

            .login-title {
                font-size: 1.4rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <img src="~/img/logo.png"
             alt="Logo InocuoGo"
             class="brand-logo"
             onerror="this.style.display='none'; document.getElementById('backupBlock').style.display='block';" />

        <div id="backupBlock" class="fallback-block">
            <i class="fas fa-leaf fallback-icon"></i>
            <h4 class="text-success fw-bold mt-2 mb-0">InocuoGo</h4>
        </div>

        <h2 class="login-title">Recuperar Contraseña</h2>
        <p class="text-muted small mb-4">
            Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu acceso.
        </p>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success py-2 mb-3 border-0 shadow-sm text-start">
                <i class="fas fa-check-circle me-1"></i> @ViewBag.Success
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2 mb-3 border-0 shadow-sm text-start">
                <i class="fas fa-exclamation-circle me-1"></i> @ViewBag.Error
            </div>
        }

        <form asp-action="RecuperarPassword" method="post" class="text-start">
            <div class="mb-4">
                <label class="form-label text-muted small fw-bold mb-1">Correo Electrónico</label>
                <div class="custom-input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="correoAdm" class="form-control" placeholder="nombre@ejemplo.com" required />
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-ingresar text-white shadow-sm">
                    Enviar Instrucciones
                </button>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-decoration-none text-muted small">
                    <i class="fas fa-arrow-left me-1"></i> Volver al Inicio de Sesión
                </a>
            </div>
        </form>
    </div>
</body>
</html>