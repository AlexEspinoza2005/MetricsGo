@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Recuperar Contraseña</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-4">
                <div class="card shadow-lg" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h4 class="mb-4">Recuperar Contraseña</h4>
                        <p class="text-muted">Ingresa tu correo electrónico y te enviaremos instrucciones para recuperar tu contraseña.</p>
                        <form>
                            <div class="mb-3">
                                <label class="form-label">Correo Electrónico</label>
                                <input type="email" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-success w-100">Enviar Instrucciones</button>
                        </form>
                        <div class="text-center mt-3">
                            <a asp-action="Login" class="text-decoration-none">Volver al Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>