@model IEnumerable<InocuoGoMetrics.Controllers.UsuarioAdminResponse>
@{
    ViewData["Title"] = "Usuarios Administradores";
}

<div class="row align-items-center mb-4">
    <div class="col-12 col-md">
        <h2 class="mb-1">Gestión de Usuarios Administradores</h2>
        <p class="text-muted mb-0">Administra los usuarios con acceso al sistema</p>
    </div>
    <div class="col-12 col-md-auto mt-3 mt-md-0">
        <a asp-action="Create" class="btn btn-success shadow-sm w-100">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
    </div>
</div>

<div class="card shadow-sm" style="border-radius: 12px; border: 1px solid #e3e6f0;">
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive" style="border-radius: 12px;">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th class="ps-4">Nombre</th>
                            <th>Correo Electrónico</th>
                            <th>Fecha Registro</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user text-success"></i>
                                        </div>
                                        <strong>@usuario.nombreAdm</strong>
                                    </div>
                                </td>
                                <td>@usuario.correoAdm</td>
                                <td>
                                    <small class="text-muted">
                                        <i class="far fa-calendar-alt me-1"></i>
                                        @Convert.ToDateTime(usuario.creadoAdm).ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-danger shadow-sm" onclick="confirmarEliminar('@usuario.idAdm')" title="Eliminar" style="border-radius: 6px;">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-4">
                <div class="alert alert-info mb-0 shadow-sm">
                    <i class="fas fa-info-circle me-2"></i> No hay usuarios registrados.
                    <a asp-action="Create" class="alert-link ms-1">Crear el primero</a>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="lead mb-2">¿Estás seguro de que deseas eliminar este usuario?</p>
                <p class="text-muted mb-0 small">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer justify-content-center bg-light">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                <form id="formEliminar" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash me-1"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminar(id) {
            document.getElementById('formEliminar').action = '/UsuariosAdmin/Delete/' + id;
            new bootstrap.Modal(document.getElementById('modalEliminar')).show();
        }
    </script>
}