@{
    ViewData["Title"] = "Editar Mi Perfil";
}

<style>
    body {
        background-color: #e9ecef;
    }

    .login-card {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 2rem 2.5rem;
        width: 100%;
        max-width: 500px;
        border: 1px solid #dee2e6;
        margin: 2rem auto;
    }

    .brand-logo {
        width: 140px;
        height: auto;
        display: block;
        margin: 0 auto 1rem auto;
    }

    .page-title {
        font-family: 'Segoe UI', sans-serif;
        font-weight: 700;
        color: #333;
        font-size: 1.6rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .custom-input-group {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        display: flex;
        align-items: center;
        background-color: #f8f9fa;
        transition: all 0.2s;
        overflow: hidden;
        height: 50px;
    }

        .custom-input-group:focus-within {
            border-color: #198754;
            background-color: #fff;
            box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.15);
        }

        .custom-input-group .input-group-text {
            background-color: transparent;
            border: none;
            color: #6c757d;
            padding-left: 1rem;
            padding-right: 0.5rem;
            font-size: 1.1rem;
        }

        .custom-input-group .form-control {
            border: none;
            box-shadow: none;
            background-color: transparent;
            height: 100%;
            font-size: 1rem;
            color: #333;
            font-weight: 500;
        }

    .link-toggle {
        color: #198754;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        margin-top: 10px;
    }

        .link-toggle:hover {
            text-decoration: underline;
            color: #146c43;
        }

    .alert-danger {
        font-size: 0.9rem;
        border-radius: 8px;
    }
</style>

<div class="container">
    <div class="login-card">
        <img src="~/img/logo.png"
             alt="Logo InocuoGo"
             class="brand-logo"
             onerror="this.style.display='none';" />

        <h2 class="page-title">Editar Mi Perfil</h2>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
                <i class="fas fa-check-circle me-2"></i> @ViewBag.Success
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div id="passwordError" class="alert alert-danger border-0 shadow-sm" style="display:none;">
            <i class="fas fa-exclamation-circle me-1"></i> Las contraseñas no coinciden.
        </div>

        <form method="post" asp-action="EditarPerfil" id="profileForm" autocomplete="off">

            <input type="hidden" name="correoAdm" value="@Context.Session.GetString("UsuarioCorreo")" />

            <div class="mb-3">
                <label class="form-label text-muted small fw-bold mb-1">Nombre Completo</label>
                <div class="custom-input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" name="nombreAdm" class="form-control" value="@Context.Session.GetString("UsuarioNombre")" required />
                </div>
            </div>

            <hr class="my-4" style="opacity: 0.1;">

            <div class="text-center mb-3">
                <a href="#" class="link-toggle" onclick="toggleCambiarPassword(); return false;">
                    <i class="fas fa-key me-1"></i> ¿Deseas cambiar tu contraseña?
                </a>
            </div>

            <div id="cambiarPasswordSection" style="display: none;" class="mb-4 bg-light p-3 rounded border">

                <div class="mb-3">
                    <label class="form-label text-muted small fw-bold mb-1">Nueva Contraseña</label>
                    <div class="custom-input-group bg-white">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" name="passwAdm" id="passwAdm" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                    </div>
                </div>

                <div class="mb-1">
                    <label class="form-label text-muted small fw-bold mb-1">Confirmar Nueva Contraseña</label>
                    <div class="custom-input-group bg-white">
                        <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                        <input type="password" name="confirmPasswAdm" id="confirmPasswAdm" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                    </div>
                </div>
                <small class="text-muted d-block mt-2 text-center" style="font-size: 0.8rem;">
                    Déjalo vacío si no quieres cambiarla.
                </small>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-success btn-ingresar text-white shadow-sm">
                    <i class="fas fa-save me-2"></i> Guardar Cambios
                </button>

                <a asp-action="Index" class="btn btn-light text-muted border-0 shadow-sm" style="padding: 0.8rem;">
                    <i class="fas fa-arrow-left me-2"></i> Volver al Dashboard
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function toggleCambiarPassword() {
            const section = document.getElementById('cambiarPasswordSection');
            if (section.style.display === 'none') {
                section.style.display = 'block';
                document.getElementById('passwAdm').value = '';
                document.getElementById('confirmPasswAdm').value = '';
            } else {
                section.style.display = 'none';
            }
        }

        document.getElementById('profileForm').onsubmit = function(e) {
            const pass1 = document.getElementById('passwAdm').value;
            const pass2 = document.getElementById('confirmPasswAdm').value;
            const errorDiv = document.getElementById('passwordError');

            if (pass1.length > 0 || pass2.length > 0) {
                if (pass1 !== pass2) {
                    e.preventDefault(); 
                    errorDiv.style.display = 'block';
                    window.scrollTo(0, 0);
                    return false;
                }
            }
            errorDiv.style.display = 'none';
            return true;
        };
    </script>
}