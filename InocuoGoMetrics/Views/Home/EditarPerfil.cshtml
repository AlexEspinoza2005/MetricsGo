@{
    ViewData["Title"] = "Editar Mi Perfil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Editar Mi Perfil</h2>
</div>

<div class="card shadow-sm" style="max-width: 600px; margin: 0 auto;">
    <div class="card-body p-4">
        <div class="text-center mb-4">
            <i class="fas fa-leaf fa-3x text-success"></i>
            <h4 class="mt-3">InocuoGo</h4>
            <p class="text-muted">Actualiza tu información personal</p>
        </div>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @ViewBag.Success
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post" asp-action="EditarPerfil">
            <div class="mb-3">
                <label class="form-label">Nombre Completo</label>
                <input type="text" name="nombreAdm" class="form-control" value="@Context.Session.GetString("UsuarioNombre")" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Correo Electrónico</label>
                <input type="email" name="correoAdm" class="form-control" value="@Context.Session.GetString("UsuarioCorreo")" readonly style="background-color: #e9ecef;" />
                <small class="text-muted">El correo no se puede cambiar</small>
            </div>

            <hr class="my-4">

            <div class="mb-3">
                <a href="#" class="text-decoration-none" onclick="toggleCambiarPassword(); return false;">
                    <i class="fas fa-lock"></i> Cambiar Contraseña
                </a>
            </div>

            <div id="cambiarPasswordSection" style="display: none;" class="mt-3">
                <div class="mb-3">
                    <label class="form-label">Nueva Contraseña</label>
                    <input type="password" name="passwAdm" class="form-control" />
                    <small class="text-muted">Dejar vacío para mantener la contraseña actual</small>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary w-100 mt-2">
                    <i class="fas fa-arrow-left"></i> Volver al Dashboard
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function toggleCambiarPassword() {
            const section = document.getElementById('cambiarPasswordSection');
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }
    </script>
}