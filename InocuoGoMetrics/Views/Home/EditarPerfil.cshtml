@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Editar Mi Perfil</h2>
</div>

<div class="card shadow-sm">
    <div class="card-body p-4">
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }

        <form method="post">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Nombre Completo</label>
                    <input type="text" name="nombre" class="form-control" value="Usuario Demo" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Correo Electrónico</label>
                    <input type="email" name="correo" class="form-control" value="usuario@mail.com" required />
                </div>
            </div>

            <hr class="my-4">
            <h5 class="mb-3">Cambiar Contraseña</h5>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Contraseña Actual</label>
                    <input type="password" name="passwordActual" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Nueva Contraseña</label>
                    <input type="password" name="passwordNuevo" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Confirmar Contraseña</label>
                    <input type="password" class="form-control" />
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>