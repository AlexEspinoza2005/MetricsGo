@model InocuoGoMetrics.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h2 class="mb-1">Resumen de Estadísticas</h2>
        <p class="text-muted mb-0">Panel de control general del sistema</p>
    </div>
    <button class="btn btn-outline-success">
        <i class="fas fa-download me-2"></i> Exportar Datos
    </button>
</div>

<!-- Cards Superiores -->
<div class="row g-4 mb-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted mb-2 text-uppercase small fw-semibold">Total Conversaciones</p>
                        <h1 class="display-4 fw-bold mb-0">@Model.TotalConversaciones</h1>
                        <small class="text-success">
                            <i class="fas fa-arrow-up"></i> Activas
                        </small>
                    </div>
                    <div class="text-primary" style="font-size: 3rem; opacity: 0.15;">
                        <i class="fas fa-comments"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted mb-2 text-uppercase small fw-semibold">Usuarios Únicos</p>
                        <h1 class="display-4 fw-bold mb-0">@Model.UsuariosUnicos</h1>
                        <small class="text-success">
                            <i class="fas fa-arrow-up"></i> Registrados
                        </small>
                    </div>
                    <div class="text-success" style="font-size: 3rem; opacity: 0.15;">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gráfico -->
<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="mb-1">5 Temas Recurrentes</h5>
                <p class="text-muted small mb-0">Distribución de consultas por categoría</p>
            </div>
            <span class="badge bg-light text-dark">Últimos 30 días</span>
        </div>

        <div class="row align-items-center">
            <div class="col-md-6">
                <div style="max-width: 350px; margin: 0 auto;">
                    <canvas id="temasChart"></canvas>
                </div>
            </div>
            <div class="col-md-6">
                <div class="list-group list-group-flush">
                    @{
                        var colores = new[] { "primary", "success", "warning", "info", "secondary" };
                        var index = 0;
                        var total = Model.TemasRecurrentes.Values.Sum();
                    }
                    @foreach (var tema in Model.TemasRecurrentes)
                    {
                        var porcentaje = (tema.Value * 100.0 / total);
                        <div class="list-group-item border-0 px-0">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-@colores[index] me-2" style="width: 12px; height: 12px; padding: 0;"></span>
                                    <span class="fw-medium">@tema.Key</span>
                                </div>
                                <span class="text-muted">@porcentaje.ToString("F1")%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-@colores[index]" style="width: @porcentaje%"></div>
                            </div>
                        </div>
                        index++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('temasChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TemasRecurrentes.Keys)),
                datasets: [{
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TemasRecurrentes.Values)),
                    backgroundColor: [
                        '#0d6efd',
                        '#198754',
                        '#ffc107',
                        '#0dcaf0',
                        '#6c757d'
                    ],
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                cutout: '70%',
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0,0,0,0.8)',
                        padding: 12,
                        cornerRadius: 8
                    }
                }
            }
        });
    </script>
}