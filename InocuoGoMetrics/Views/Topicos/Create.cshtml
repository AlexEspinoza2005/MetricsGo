@{
    ViewData["Title"] = "Nuevo Tópico";
}

<div class="mb-4">
    <h2>Crear Nuevo Tópico</h2>
    <p class="text-muted">Agrega un nuevo tema de conversación para el asistente virtual</p>
</div>

<div class="card shadow-sm" style="max-width: 800px;">
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <!-- Campo oculto para la organización -->
            <input type="hidden" name="idOrgTem" value="@Context.Session.GetString("OrgId")" />

            <div class="mb-3">
                <label class="form-label">Título del Tópico</label>
                <input type="text" name="nombreTem" class="form-control" placeholder="Ej: Higiene Personal" required />
                <small class="text-muted">Nombre descriptivo del tema</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <textarea name="descriTem" class="form-control" rows="4" placeholder="Describe de qué trata este tópico..." required></textarea>
                <small class="text-muted">Explicación detallada del contenido del tópico</small>
            </div>

            <hr class="my-4">

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Guardar Tópico
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>