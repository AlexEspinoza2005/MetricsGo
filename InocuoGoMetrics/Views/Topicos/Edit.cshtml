@model InocuoGoMetrics.Controllers.TopicoResponse

@{
    ViewData["Title"] = "Editar Tópico";
}

<div class="mb-4">
    <h2>Editar Tópico</h2>
    <p class="text-muted">Modifica la información del tópico seleccionado</p>
</div>

<div class="card shadow-sm" style="max-width: 800px;">
    <div class="card-body p-4">
        <form asp-action="Edit" asp-route-id="@Model.idTem" method="post">
            <div class="mb-3">
                <label class="form-label">ID del Tópico</label>
                <input type="text" class="form-control" value="@Model.idTem" readonly style="background-color: #e9ecef;" />
            </div>

            <div class="mb-3">
                <label class="form-label">Título del Tópico</label>
                <input type="text" name="nombreTem" class="form-control" value="@Model.nombreTem" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <textarea name="descriTem" class="form-control" rows="4" required>@Model.descriTem</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Organización (UUID)</label>
                <input type="text" name="idOrgTem" class="form-control" value="@Model.idOrgTem" readonly style="background-color: #e9ecef;" />
            </div>

            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="activoTem" id="activoTem" @(Model.activoTem ? "checked" : "") />
                    <label class="form-check-label" for="activoTem">
                        Tópico Activo
                    </label>
                </div>
                <small class="text-muted">Los tópicos inactivos no aparecerán en el asistente</small>
            </div>

            <hr class="my-4">

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Actualizar Tópico
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>